extends ../layouts/layout

block content
  .container
    h1.text-center Реєстрація
    .row
      .col-lg-6.col-lg-offset-3
        if (errors)
          ul.error
            for error in errors
             li= error.msg 
        form(method='POST', action='/auth/register')
          .form-group
            label(for='email') Електронна адереса:
            span.req *
            |:
            input.form-control(type='email', id='email', name='email', placeholder='example@mail.com', value=(email ? email : ''), autocomplete='off', required=true)
          .form-group
            label(for='password') Пароль(від 6 до 12 символів, не повинен містити пробілів)
            span.req *
            | :
            input.form-control(type='password', id='password', name='password', value=(password ? password : ''), autocomplete='off', required=true)
          .form-group
            label(for='passConf') Підтвердження паролю
            span.req *
            | :
            input.form-control(type='password', id='passConf', name='passConf', value=(passConf ? passConf : ''), autocomplete='off', required=true)
          .form-group
            label(for='firstname') Ім’я
            span.req *
            |:
            input.form-control(type='text', id='firstname', name='firstname', placeholder='Ваше ім’я', value=(firstname ? firstname : ''), autocomplete='off', required=true)
          .form-group
            label(for='fathersname') Ім’я по-батькові
            span.req *
            |:
            input.form-control(type='text', id='fathersname', name='fathersname', placeholder='Ваше ім’я по-батькові', value=(fathersname ? fathersname : ''), autocomplete='off', required=true)
          .form-group
            label(for='lastname') Прізвище
            span.req *
            |:
            input.form-control(type='text', id='lastname', name='lastname', placeholder='Ваше прізвище', value=(lastname ? lastname : ''), autocomplete='off', required=true)
          .form-group
            label(for='position') Посада
            span.req *
            |:
            input.form-control(type='text', id='position', name='position', placeholder='Ваша посада', value=(position ? position : ''), autocomplete='off', required=true)
          .form-group
            label(for='phone') Номер телефону:
            input.form-control(type='text', id='phone', name='phone', placeholder='+38(000)000-00-00', value=(phone ? phone : ''))
          button.btn.btn-primary.btn-lg(type='submit') Зареєструватися